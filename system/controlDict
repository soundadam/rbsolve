FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     buoyantBoussinesqPimpleFoam;

startFrom       startTime;
startTime       0;
stopAt          endTime;
endTime         200;

deltaT          0.001;

writeControl    runTime;
writeInterval   2;
purgeWrite      5;
writeFormat     binary;
writePrecision  6;
writeCompression on;

timeFormat      general;
timePrecision   6;

runTimeModifiable true;

adjustTimeStep  yes;
maxCo           0.5;
maxDeltaT       0.1;

functions
{
    heatTransfer
    {
        type            heatTransferCoeff;
        libs            (fieldFunctionObjects);
        field           T;
        writeControl    writeTime;
        patches         (ceiling floor);
        htcModel        fixedReferenceTemperature;
        TRef            300;
    }
}

